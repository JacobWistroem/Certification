<div>
    <form method="POST">
        <div class="form-group">
            <label for="itemTitle">Brugernavn</label>
            <input type="text" class="form-control" id="username" name="username" placeholder="Brugernavn" value="@ViewBag.Username" />
        </div>
        <div class="form-group">
            <label for="itemDescription">Email</label>
            <input type="text" class="form-control" id="email" name="email" placeholder="Email" value="@ViewBag.Email" />
        </div>
        <div class="form-group">
            <label for="itemDescription">Nyt Kodeord</label>
            <input type="password" class="form-control" id="password" name="password" placeholder="Kodeord" />
        </div>
        <button type="submit" class="btn-primary">Gem Info</button>
        @ViewBag.Message
    </form>
</div>
